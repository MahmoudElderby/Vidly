
@{
    ViewBag.Title = "New";
}

<h2>New Rental Form</h2>


<form id="newRental">
    
    <div class="=form-group">
        <label>Customer</label>
        <div class="tt-cont">
            <input id="customer" name="customer" data-rule-validCustomer = "true" required type="text" value="" class="form-control" />
        </div>
        
    </div>
    
    <div class="=form-group">
        <label>Movie</label>
        <div class="tt-cont">
            <input id="movie" name="movie" data-rule-validMovie type="text" value="" class="form-control" />
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>
    

    <button class="btn btn-primary">Submit</button>

</form>



@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            var vm = {
                movieIds: []
        };
            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                minLength: 3,
                hint: true,
                highlight: true
            }, {
                name: 'customers',
                display: 'name',
                source: customers
            }).on("typeahead:select",function(e,customer) {
                vm.customerid = customer.id;
                console.log(customer.id);
            });


            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#movie').typeahead({
                minLength: 3,
                hint: true,
                highlight: true
            }, {
                name: 'movies',
                display: 'name',
                source: movies
            }).on("typeahead:select", function (e, movie) {
                vm.movieIds.push(movie.id);
                console.log(movie.id);

                $("#movies").append("<li class='list-group-item'>" + movie.name + "</li>");

                $("#movie").typeahead("val", "");
            });


            $.validator.addMethod("ValidCustomer",function() {
                return vm.customerid && vm.customerid !== 0;
            },"Please enter a valid customer");


            $.validator.addMethod("validMovie", function() {
                return vm.movieIds.length > 0;
            }, "Please select at least 1 movie");


             var validator= $("#newRental").validate({
                submitHandler:function() {
                   //e.preventDefault();
                    $.ajax({
                        url: "/api/rentalMovies",
                        method: "POST",
                        data: vm
                    }).done(function () {
                        toastr.success("Rental successfully recorded");

                        $("#customer").typeahead("val", "");
                        $("#movie").typeahead("val", "");
                        $("#movies").empty();
                        vm = { movieIds: [] }
                        validator.resetForm();

                    }).fail(function () {
                        toastr.error("Something unexpected happened!");
                    });
                    return false;
                }
            });
        });
    </script>
        
}
